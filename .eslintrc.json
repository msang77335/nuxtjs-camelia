{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "@nuxtjs/eslint-config-typescript",
    "plugin:nuxt/recommended",
    "plugin:prettier/recommended"
  ],
  "settings": { "import/ignore": ["node_modules"] },
  "rules": {
    "vue/multi-word-component-names": 0,
    "prettier/prettier": "error"
  }
}
